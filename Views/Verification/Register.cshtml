@model RegisterInfo
@using System.Security.Cryptography
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Страница регистрации";
    var sha = SHA256.Create();
    byte[] userPass;
}


<div class="row">
    <img class="float-start" style="max-height:100px;max-width:100px;" src="~/img/chlogo.svg" asp-append-version=true />
</div>
<div class="row rounded btn-light mt-3">
    <h1 class="row">Регистрация</h1>
    <div class="col">
        @using (Html.BeginForm("Register", "Verification", FormMethod.Post, new { @Class = "container", @id="register" }))
        {
            @Html.Label("Логин")
            @Html.TextBoxFor(m => m.Username, new { @Class="row form-control mb-4", @Placeholder="Введите логин", @id="email"})

            @Html.Label("Пароль")
            @Html.PasswordFor(m => m.Password, new { @Class="row form-control", @Placeholder="Введите пароль", @id="pass" })

            <input class="mt-5" type="submit" value="Отправить" />               
        }
    </div>
    <a class="row link-dark" asp-action="Auth">Вы уже зарегистрированы?</a>
    <div class="col">
        <p class="row align-content-center" >Учебная платформа для <br/>
            просмотра и загрузки лекций. <br/>
            LMS - буп бип рандомный текст</p>
        <img class="row float-end" style="max-height:350px;max-width:350px;" src="~/img/panda.png" asp-append-version=true />
    </div>
</div>


